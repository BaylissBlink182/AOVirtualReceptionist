<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/activity1">
    <!--android:background="@drawable/techhand1">-->

    <View android:id="@+id/fakeView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView3"
        android:textStyle="bold"
        android:textSize="40dp"
        android:text="Visiting Someone?"
        android:textColor="#000000"
        android:background="#f1cdc2"
        android:backgroundTintMode="add"

        android:layout_alignRight="@+id/fakeView"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="left|center_vertical"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/imageView1"

        android:background="@drawable/appgirl1"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/fakeView"
        android:layout_alignParentBottom="true"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tap the screen to notify them with our\nVirtual Receptionist"
        android:id="@+id/textView5"

        android:textSize="55dp"
        android:textColor="#010101"
        android:textStyle="bold"


        android:layout_alignRight="@+id/fakeView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="left|bottom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to\nAccucode!"
        android:id="@+id/textView2"
        android:textStyle="bold"
        android:background="#000105"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="70dp"

        android:layout_alignLeft="@id/imageView1"
        android:layout_marginBottom="39dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="left|top"
        android:layout_toStartOf="@+id/imageView1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:id="@+id/btnTransfer"
        android:singleLine="true" />

</RelativeLayout>